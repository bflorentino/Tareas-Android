<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TipoComida"
    android:paddingHorizontal="10dp"
    android:orientation="vertical"
    android:id="@+id/LayoutTipoComida"
    android:paddingVertical="10dp">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/layoutComida">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imagenComida"
            />

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comidaDescripcion"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/comidaEspecificaNombre"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/comidaDescripcionText"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>